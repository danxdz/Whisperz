# Whisperz Environment Configuration
# Copy this file to .env and update with your actual values

# Security Configuration (REQUIRED - Generate with: npm run generate-secrets)
# This secret is used for invite link signatures and HMAC operations
# Must be at least 32 characters long and unique for your deployment
VITE_INVITE_SECRET=your-unique-secret-key-here-min-32-chars

# Gun.js Relay Servers (Optional)
# Comma-separated list of custom Gun.js relay servers
# If not provided, will use default public relays
# Example: https://your-relay.com/gun,https://another-relay.com/gun
VITE_GUN_PEERS=

# PeerJS Server Configuration (Optional)
# Custom PeerJS server for WebRTC signaling
# Format: hostname:port (e.g., your-peerjs-server.com:9000)
# If not provided, will use PeerJS cloud service
VITE_PEERJS_HOST=

# Development Configuration
# Node environment (development/production/test)
NODE_ENV=production

# Application Settings
# Port for development server
PORT=5173

# Feature Flags (Optional)
# Enable/disable specific features
VITE_ENABLE_WEBRTC=true
VITE_ENABLE_ENCRYPTION=true
VITE_ENABLE_OFFLINE_MODE=true

# Logging Configuration (Optional)
# Log level: debug, info, warn, error, none
VITE_LOG_LEVEL=error

# Performance Settings (Optional)
# Maximum message history to load
VITE_MAX_MESSAGE_HISTORY=100
# Message cleanup interval in milliseconds
VITE_MESSAGE_CLEANUP_INTERVAL=3600000

# Security Headers (For production deployment)
# Content Security Policy settings
VITE_CSP_ENABLED=true

# IMPORTANT SECURITY NOTES:
# 1. NEVER commit the actual .env file to version control
# 2. Always generate a unique VITE_INVITE_SECRET for production
# 3. Use HTTPS for all custom relay servers in production
# 4. Regularly rotate secrets and update them across your deployment
# 5. Keep this file updated with any new environment variables

# To generate secure secrets, run:
# npm run generate-secrets