# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# JavaScript, JSX, and JSON files
[*.{js,jsx,json}]
indent_size = 2
max_line_length = 100

# TypeScript files
[*.{ts,tsx}]
indent_size = 2
max_line_length = 100

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS files
[*.css]
indent_size = 2
max_line_length = 80

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Package files
[package*.json]
indent_size = 2

# Configuration files
[.*rc]
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# Git files
[.git*]
indent_size = 2